<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.front.controllers.ClientCreate">
   <children>
      <Label text="Создание клиента">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="passportNumber" promptText="Номер паспорта">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="phone" promptText="Номер телефона (необязательно)">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="email" promptText="email (необязательно)">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="address" promptText="Адрес (необязательно)">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <DatePicker fx:id="birthDate" promptText="Дата рождения">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </DatePicker>
      <Button mnemonicParsing="false" onAction="#createClient" prefHeight="26.0" prefWidth="188.0" text="Создать клиента">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#backToMenu" prefHeight="26.0" prefWidth="188.0" text="Назад в меню">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
