<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.front.controllers.CreateDeposit">
   <children>
      <Label text="Создание депозита">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="depoSum" promptText="Сумма депозита">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <ComboBox fx:id="depoType" prefHeight="26.0" prefWidth="522.0" promptText="Тип депозита">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ComboBox>
      <Button mnemonicParsing="false" onAction="#createDepo" prefHeight="26.0" prefWidth="152.0" text="Создать депозит">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#toMenu" prefHeight="26.0" prefWidth="152.0" text="Назад в меню">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
