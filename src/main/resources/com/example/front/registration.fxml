<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.front.controllers.Registration">
   <children>
      <Label text="Регистрация">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin></Label>
      <TextField fx:id="login" promptText="Логин">
         <VBox.margin>
            <Insets bottom="5.0" left="40.0" right="40.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="password" promptText="Пароль">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="5.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="fullname" promptText="Полное имя (необязательно)">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <ComboBox fx:id="myComboBox" prefHeight="26.0" prefWidth="522.0" visibleRowCount="2">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ComboBox>
      <Label fx:id="errrorMessage">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#registration" prefHeight="26.0" prefWidth="110.0" text="Регистрация">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#toAuth" text="Перейти к авторизации">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>

</VBox>
